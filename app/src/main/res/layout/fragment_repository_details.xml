<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10sp"
    android:layout_margin="5sp"
    android:background="@drawable/rectangle_yellow_transparent">
    <ProgressBar
        android:id="@+id/progress_bar_fragment_details"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="25"
        android:layout_marginTop="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />
    <TextView
        android:id="@+id/repo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/programing_language"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="repo_name"/>
    <TextView
        android:id="@+id/programing_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="5sp"
        android:background="@drawable/rectangle_blue_light_inside_border_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Java"/>
    <TextView
        android:id="@+id/html_url"
        android:text="https://github.com/bernardinhio"
        android:autoLink="web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#0118e6"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="italic"
        android:layout_marginTop="5sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repo_name"
        tools:text="html_url"/>
    <TextView
        android:id="@+id/created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_marginTop="12sp"
        app:layout_constraintTop_toBottomOf="@id/html_url"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="created_at"/>
    <TextView
        android:id="@+id/tv_show_last_commit"
        android:text="Last commit"
        android:onClick="showLastCommitInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:background="@drawable/rectangle_light_yellow_inside_border_black"
        android:paddingRight="12sp"
        android:paddingLeft="12sp"
        android:paddingTop="3sp"
        android:paddingBottom="3sp"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="@id/created_at"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/updated_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@id/tv_show_last_commit"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="updated_at"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_last_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@drawable/rectangle_light_yellow_inside_border_black"
        app:layout_constraintTop_toBottomOf="@id/tv_show_last_commit">
        <TextView
            android:id="@+id/username_committer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="username_committer"/>
        <TextView
            android:id="@+id/date_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#000000"
            android:background="#ffd988"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            app:layout_constraintTop_toTopOf="@id/username_committer"
            app:layout_constraintBottom_toBottomOf="@id/username_committer"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="date_commit"/>
        <TextView
            android:id="@+id/email_committer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#0118e6"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/username_committer"
            tools:text="email_committer"/>
        <TextView
            android:id="@+id/message_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            app:layout_constraintTop_toBottomOf="@id/email_committer"
            tools:text="message_commit"/>
        <TextView
            android:id="@+id/commit_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textSize="12sp"
            android:textColor="#0118e6"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/message_commit"
            tools:text="commit_url"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>